<div class="container mt-5 bg-white p-4 rounded shadow mt-5">
  <div class="row">
    <div class="col-md-6">
      <h2 class="alert alert-info">Manage Students</h2>
    </div>
    <div class="col-md-6 text-right">
      <a href="/admin/addstudent" class="btn btn-success mr-2">Add Student</a>
      <a href="/admin" class="btn btn-danger">Logout</a>
    </div>
  </div>

  <!-- Search and Sort Controls -->
  <div class="container">
    <div class="row mt-4">
      <div class="col-md-6">
        <div class="input-group">
          <input
            type="text"
            class="form-control"
            placeholder="Search by REGNO or NAME"
            id="searchInput"
          />
          <div class="input-group-append">
            <button
              class="btn btn-outline-secondary"
              type="button"
              id="searchButton"
            >Search</button>
          </div>
        </div>
      </div>
      <div class="col-md-6 text-right">
        <button
          class="btn btn-outline-secondary"
          type="button"
          id="sortByName"
        >Sort by NAME</button>
        <button
          class="btn btn-outline-secondary ml-2"
          type="button"
          id="sortByRegno"
        >Sort by REGNO</button>
      </div>
    </div>

    <!-- Table -->
    <div class="table-container mt-4">
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">SNO</th>
            <th scope="col">REGNO</th>
            <th scope="col">NAME</th>
            <th scope="col">DEPT</th>
            <th scope="col">EDIT</th>
            <th scope="col">DELETE</th>
          </tr>
        </thead>
        <tbody id="tableBody">
          {{#each data}}
            <tr>
              <td>{{indexVal @index}}</td>
              <td>{{this.REGNO}}</td>
              <td>{{this.NAME}}</td>
              <td>{{this.DEPT}}</td>
              <td>
                <a
                  href="/admin/editstudent/{{this.REGNO}}"
                  class="btn btn-sm btn-info"
                >Edit</a>
              </td>
              <td>
                <a
                  href="/admin/deletestudent/{{this.REGNO}}"
                  class="btn btn-sm btn-danger"
                  onclick="return confirm('Are you sure to delete...')"
                >Delete</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
</div>
