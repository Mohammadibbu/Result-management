      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); } .card-icon { font-size: 3rem;
      color: #007bff; } .card-body { display: flex; flex-direction: column;
      align-items: center; justify-content: center; } .card-text { margin-top:
      10px; }
