<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <title>Manage Students Result</title>
    <style>
      .modal-content { border-radius: 15px; } .modal-header { border-bottom:
      none; } .modal-body p.lead { margin-bottom: 20px; }
      .btn-outline-primary:hover, .btn-outline-secondary:hover { color: #fff; }
    </style>
  </head>
  <body>
    <div class="container mt-5 bg-white p-4 rounded shadow">
      <div class="row">
        <div class="col-md-6">
          <h2 class="alert alert-info">Manage Students Result</h2>
        </div>
        <div class="col-md-6 text-right">
          <a href="/add-result" class="btn btn-success mr-2">Add Student Result</a>
          <button
            type="button"
            class="btn btn-danger"
            onclick="location.href='/admin/manage'"
          >
            Back
          </button>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-12">
          <table class="table table-bordered">
            <tbody>
              <tr>
                <td class="font-weight-bold">NAME:
                  <span class="text-primary">{{studentName}}</span></td>
                <td class="font-weight-bold">REGNO:
                  <span
                    class="text-primary"
                  >{{data.0.register_number}}</span></td>
              </tr>
              <tr>
                <td class="font-weight-bold">DOB:
                  <span class="text-primary">{{DOB}}</span></td>
                <td class="font-weight-bold">SEMESTER:
                  <span class="text-primary">{{SEMESTER}}</span></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Results Table -->
      <div class="table-responsive mt-4">
        <table class="table table-striped table-hover">
          <thead class="thead-dark">
            <tr>
              <th scope="col">SNO</th>
              <th scope="col">SUBJECT CODE</th>
              <th scope="col">ST1</th>
              <th scope="col">ST2</th>
              <th scope="col">END SEMESTER</th>
              <th scope="col">TOTAL</th>
              <th scope="col">RESULT</th>
              <th scope="col">EDIT</th>
              <th scope="col">DELETE</th>
            </tr>
          </thead>
          <tbody id="tableBody">
            {{#each data}}
              <tr>
                <td>{{indexVal @index}}</td>
                <td>{{this.subjectCode}}</td>
                <td>{{this.ST1}}</td>
                <td>{{this.ST2}}</td>
                <td>{{this.EndSemester}}</td>
                <td>{{this.Total}}</td>
                <td>{{this.Result}}</td>
                <td>
                  <button
                    type="button"
                    class="btn btn-sm btn-info btn-edit"
                    data-regno="{{this.register_number}}"
                    data-subjectcode="{{this.subjectCode}}"
                    data-st1="{{this.ST1}}"
                    data-st2="{{this.ST2}}"
                    data-endsem="{{this.EndSemester}}"
                    data-total="{{this.Total}}"
                    data-result="{{this.Result}}"
                  >
                    Edit
                  </button>
                </td>
                <td>
                  <button
                    type="button"
                    class="btn btn-sm btn-danger btn-delete"
                    data-regno="{{this.register_number}}"
                  >
                    Delete
                  </button>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

    <!-- Edit Modal -->
    <div
      class="modal fade"
      id="editModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="editModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content border-0 shadow-lg">
          <div class="modal-header bg-info text-white">
            <h5 class="modal-title" id="editModalLabel">Edit Subject</h5>
            <button
              type="button"
              class="close text-white"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form id="editForm" action="/admin/edit-result" method="POST">
              <input type="hidden" name="register_number" id="editRegNo" />
              <div class="form-group">
                <label for="editSubjectCode">Subject Code</label>
                <input
                  type="text"
                  class="form-control"
                  name="subjectCode"
                  id="editSubjectCode"
                  readonly
                />
              </div>
              <div class="form-group">
                <label for="editST1">ST1</label>
                <input
                  type="text"
                  class="form-control"
                  name="ST1"
                  id="editST1"
                />
              </div>
              <div class="form-group">
                <label for="editST2">ST2</label>
                <input
                  type="text"
                  class="form-control"
                  name="ST2"
                  id="editST2"
                />
              </div>
              <div class="form-group">
                <label for="editEndSem">End Semester</label>
                <input
                  type="text"
                  class="form-control"
                  name="EndSemester"
                  id="editEndSem"
                />
              </div>
              <div class="form-group">
                <label for="editTotal">Total</label>
                <input
                  type="text"
                  class="form-control"
                  name="Total"
                  id="editTotal"
                />
              </div>
              <div class="form-group">
                <label for="editResult">Result</label>
                <input
                  type="text"
                  class="form-control"
                  name="Result"
                  id="editResult"
                />
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
            <button type="button" id="saveChanges" class="btn btn-primary">
              Save changes
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Delete Modal -->
    <div
      class="modal fade"
      id="deleteModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="deleteModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p class="lead">Are you sure you want to delete this student?</p>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Cancel
            </button>
            <button type="button" id="confirmDelete" class="btn btn-danger">
              Delete
            </button>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
    ></script>
    <script>
      document.addEventListener('DOMContentLoaded', () => { const editModal =
      document.getElementById('editModal'); const editForm =
      document.getElementById('editForm'); const editRegNo =
      document.getElementById('editRegNo'); const editSubjectCode =
      document.getElementById('editSubjectCode'); const editST1 =
      document.getElementById('editST1'); const editST2 =
      document.getElementById('editST2'); const editEndSem =
      document.getElementById('editEndSem'); const editTotal =
      document.getElementById('editTotal'); const editResult =
      document.getElementById('editResult');
      document.querySelectorAll('.btn-edit').forEach(button => {
      button.addEventListener('click', () => { editRegNo.value =
      button.getAttribute('data-regno'); editSubjectCode.value =
      button.getAttribute('data-subjectcode'); editST1.value =
      button.getAttribute('data-st1'); editST2.value =
      button.getAttribute('data-st2'); editEndSem.value =
      button.getAttribute('data-endsem'); editTotal.value =
      button.getAttribute('data-total'); editResult.value =
      button.getAttribute('data-result'); new bootstrap.Modal(editModal).show();
      }); }); document.getElementById('saveChanges').addEventListener('click',
      () => { editForm.submit(); new bootstrap.Modal(editModal).hide(); });
      document.querySelectorAll('.btn-delete').forEach(button => {
      button.addEventListener('click', () => { const deleteRegNo =
      button.getAttribute('data-regno'); const deleteModal = new
      bootstrap.Modal(document.getElementById('deleteModal'));
      document.getElementById('confirmDelete').addEventListener('click', () => {
      console.log('Delete student with regno:', deleteRegNo);
      deleteModal.hide(); }); deleteModal.show(); }); }); });
    </script>
  </body>
</html>