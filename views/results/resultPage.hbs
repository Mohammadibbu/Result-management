<style>
  @media print { body { font-size: 12px; background-color: rgb(255, 255, 255); }
  .btn { display: none; } } .print-icon { display: inline-block; font-size:
  20px; margin-right: 5px; } .green { color: green; } .red { color: red; }
</style>

<div class="container mt-4 bg-white p-4 rounded shadow">
  <div class="text-center">
    <img
      src="https://egovernance.unom.ac.in/results/unom.png"
      width="70"
      height="65"
      class="mt-2"
    />
    <h1 class="text mt-3 mb-0" style="color:brown;font-weight:bolder">
      University of Madras
    </h1>
    <h3 class="text mt-3 mb-0" style="color:rgb(3, 26, 238);font-weight:bolder">
      PG Results
    </h3>
  </div>

  <div class="row" style="margin-top:20px">
    <div class="col-md-12">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td class="font-weight-bold">NAME:
              <span>{{studentName}}</span></td>
            <td class="font-weight-bold">
              REGNO:
              <span>{{data.0.register_number}}</span>
            </td>
          </tr>
          <tr>
            <td class="font-weight-bold">DOB: <span>{{DOB}}</span></td>
            <td class="font-weight-bold">SEMESTER:
              <span>{{SEMESTER}}</span></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Table -->
  <div class="table-container mt-4">
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">SNO</th>

          <th scope="col">SUBJECT</th>
          <th scope="col">ST-1</th>
          <th scope="col">ST-2</th>
          <th scope="col">END SEMESTER</th>
          <th scope="col">TOTAL</th>
          <th scope="col">RESULT</th>
        </tr>
      </thead>
      <tbody id="tableBody">
        {{#each data}}
          <tr>
            <td>{{indexVal @index}}</td>

            <td>{{this.subjectCode}}</td>
            <td>{{this.ST1}}</td>
            <td>{{this.ST2}}</td>
            <td>{{this.EndSemester}}</td>
            <td>{{this.Total}}</td>
            <td
              class="result"
              data-result="{{this.Result}}"
            >{{this.Result}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="text-center">
    <button class="btn btn-primary" onclick="window.print()">
      <i class="fas fa-print print-icon"></i>
      Print
    </button>
    <button
      class="btn btn-secondary"
      onclick="location.replace('/result/PGresult')"
    >
      Get Another
    </button>
  </div>
</div>

<script>
  // Function to check the result and set the appropriate color function
  function checkResult() {
  document.querySelectorAll('.result').forEach((element) => { if
  (element.dataset.result === "PASS") { element.classList.add('green'); } else {
  element.classList.add('red'); } }); } window.onload = checkResult;
</script>