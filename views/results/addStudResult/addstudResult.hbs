<div
  class="container bg-light d-flex justify-content-center align-items-center mt-4 mb-4"
>
  <div class="container d-flex justify-content-center align-items-center mt-4">
    <div class="col-md-6">
      <h2 class="text-center alert-info">Add Student Result</h2>
      <form action="/add-result" method="POST">
        <div class="form-group">
          <label for="name">Student Name:</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            required
          />
        </div>
        <div class="form-group">
          <label for="regNo">Register Number:</label>
          <input
            type="text"
            id="regNo"
            name="regNo"
            class="form-control"
            required
          />
        </div>
        {{! <div class="form-group">
        <label for="dob">Date of Birth:</label>
        <input type="date" id="dob" name="dob" class="form-control" required />
      </div> }}
        <div class="form-group">
          <label for="semester">Semester:</label>
          <select id="semester" name="semester" class="form-control" required>
            <option value="" disabled selected>Select Semester</option>
            <option value="1">1st Semester</option>
            <option value="2">2nd Semester</option>
            <option value="3">3rd Semester</option>
            <option value="4">4th Semester</option>
          </select>
        </div>
        <div class="form-group">
          <label for="subject">Subject:</label>
          <input
            type="text"
            id="subject"
            name="subject"
            class="form-control"
            required
          />
        </div>
        <div class="form-group">
          <label for="st1">ST-1 Marks:</label>
          <input
            type="number"
            id="st1"
            name="st1"
            class="form-control"
            required
            oninput="calculateTotalAndResult()"
          />
        </div>
        <div class="form-group">
          <label for="st2">ST-2 Marks:</label>
          <input
            type="number"
            id="st2"
            name="st2"
            class="form-control"
            required
            oninput="calculateTotalAndResult()"
          />
        </div>
        <div class="form-group">
          <label for="endSem">End Semester Marks:</label>
          <input
            type="number"
            id="endSem"
            name="endSem"
            class="form-control"
            required
            oninput="calculateTotalAndResult()"
          />
        </div>
        <div class="form-group">
          <label for="total">Total Marks:</label>
          <input
            type="number"
            id="total"
            name="total"
            class="form-control"
            readonly
          />
        </div>
        <div class="form-group">
          <label for="result">Result:</label>
          <input
            type="text"
            id="result"
            name="result"
            class="form-control"
            readonly
            required
          />
        </div>
        <button type="submit" class="btn btn-dark">Add Result</button>
      </form>
    </div>
  </div>
</div>

<script>
  function calculateTotalAndResult() { const st1 =
  parseFloat(document.getElementById('st1').value) || 0; const st2 =
  parseFloat(document.getElementById('st2').value) || 0; const endSem =
  parseFloat(document.getElementById('endSem').value) || 0; const total = st1 +
  st2 + endSem; document.getElementById('total').value = total; const
  resultField = document.getElementById('result'); if (total > 50) {
  resultField.value = 'PASS'; } else { resultField.value = '--RA--'; } }
</script>